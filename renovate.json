{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableDependencyDashboard"],
  "bumpVersion": "patch",
  "prHourlyLimit": 40,
  "prConcurrentLimit": 100,
  "helmv3": {
    "enabled": true,
    "fileMatch": ["^charts/(library-chart|jupyter-python|jupyter-pyspark|rstudio|rstudio-sparkr|vscode-python|vscode-pyspark)/Chart\\.ya?ml$"]
  }
}
